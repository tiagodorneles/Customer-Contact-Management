@model WebApp.DAL.Customer

@{
    ViewBag.Title = "Delete Customer Contact";
}


<h3>Are you sure you want to delete this customer info?</h3>
<div>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            Classification
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Classification.Name)
        </dd>
        <dt>
            Name
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Name)
        </dd>

        <dt>
            Phone
        </dt>

        <dd>
            @Html.DisplayFor(model => model.PhoneNumber)
        </dd>

        <dt>
            Gender
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Gender)
        </dd>

        <dt>
            City
        </dt>

        <dd>
            @Html.DisplayFor(model => model.CityRegion.City.Name)
        </dd>

        <dt>
            Region
        </dt>

        <dd>
            @Html.DisplayFor(model => model.CityRegion.Name)
        </dd>
        <dt>
            Last Purchase
        </dt>

        <dd>
            @Model.LastPurchase.ToShortDateString()
        </dd>
        @if (User.IsInRole("Admin"))
        {
            <dt>
                Seller
            </dt>

            <dd>
                @Html.DisplayFor(model => model.Seller.Email)
            </dd>
        }
    </dl>

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            <input type="submit" value="Delete" class="btn btn-default" /> |
            @Html.ActionLink("Back to List", "CustomerList")
        </div>
    }
</div>
